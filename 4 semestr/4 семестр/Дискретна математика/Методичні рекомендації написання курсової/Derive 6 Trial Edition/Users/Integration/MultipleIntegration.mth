"__________________________________________________________"

"            SURFACE INTEGRALS.  GAUSS' THEOREM            "

"__________________________________________________________"

""

""

"__________________________________________________________"

" Surface area in cartesian coordinates in Rxy ; Rxz ; Ryz "

""

SURFACEAREARXY(surf,y,y1,y2,x,x1,x2):=DOUBLE(SQRT(DIF(surf,x)^2+DIF(surf,y)^2~
+1),y,y1,y2,x,x1,x2)

""

SURFACEAREARXZ(surf,x,x1,x2,z,z1,z2):=DOUBLE(SQRT(DIF(surf,z)^2+DIF(surf,x)^2~
+1),x,x1,x2,z,z1,z2)

""

SURFACEAREARYZ(surf,z,z1,z2,y,y1,y2):=DOUBLE(SQRT(DIF(surf,y)^2+DIF(surf,z)^2~
+1),z,z1,z2,y,y1,y2)

""

"__________________________________________________________"

"      Surface integral of function in Rxy ; Rxz ; Ryz     "

""

SURFACERXY(function,surf,y,y1,y2,x,x1,x2):=DOUBLE(LIM(function,z,surf)*SQRT(D~
IF(surf,x)^2+DIF(surf,y)^2+1),y,y1,y2,x,x1,x2)

""

SURFACERXZ(function,surf,x,x1,x2,z,z1,z2):=DOUBLE(LIM(function,y,surf)*SQRT(D~
IF(surf,z)^2+DIF(surf,x)^2+1),x,x1,x2,z,z1,z2)

""

SURFACERYZ(function,surf,z,z1,z2,y,y1,y2):=DOUBLE(LIM(function,x,surf)*SQRT(D~
IF(surf,y)^2+DIF(surf,z)^2+1),z,z1,z2,y,y1,y2)

""

"__________________________________________________________"

"             Unit normal vector to F(x,y,z)=0             "

""

UNITNORMALVECTOR(vect):=[DIF(vect,x)/ABS(GRAD(vect)),DIF(vect,y)/ABS(GRAD(vec~
t)),DIF(vect,z)/ABS(GRAD(vect))]

""

"__________________________________________________________"

"     Flux in cartesian coordinates in Rxy ; Rxz ; Ryz     "

""

FLUXRXY(p,q,r,surf,y,y1,y2,x,x1,x2):=DOUBLE(LIM(p*(-DIF(surf,x))+q*(-DIF(surf~
,y))+r,z,surf),y,y1,y2,x,x1,x2)

""

FLUXRXZ(p,q,r,surf,x,x1,x2,z,z1,z2):=DOUBLE(LIM(p*(-DIF(surf,z))+q+r*(-DIF(su~
rf,x)),y,surf),x,x1,x2,z,z1,z2)

""

FLUXRYZ(p,q,r,surf,z,z1,z2,y,y1,y2):=DOUBLE(LIM(p+q*(-DIF(surf,y))+r*(-DIF(su~
rf,z)),x,surf),z,z1,z2,y,y1,y2)

""

"__________________________________________________________"

"   Surface area in polar coordinates in Rxy ; Rxz ; Ryz   "

""

SURFACEAREARXYPOLAR(surf,r,r1,r2,03b8,03b81,03b82):=DOUBLEPOLAR(SQRT(DIF(s~
urf,x)^2+DIF(surf,y)^2+1),r,r1,r2,03b8,03b81,03b82)

""

SURFACEAREARXZPOLAR(surf,r,r1,r2,03b8,03b81,03b82):=DOUBLEPOLARXZ(SQRT(DIF~
(surf,z)^2+DIF(surf,x)^2+1),r,r1,r2,03b8,03b81,03b82)

""

SURFACEAREARYZPOLAR(surf,r,r1,r2,03b8,03b81,03b82):=DOUBLEPOLARYZ(SQRT(DIF~
(surf,y)^2+DIF(surf,z)^2+1),r,r1,r2,03b8,03b81,03b82)

""

"____________________________________________________________________"

"Surface integral of function in polar coordinates in Rxy ; Rxz ; Ryz"

""

SURFACERXYPOLAR(function,surf,r,r1,r2,03b8,03b81,03b82):=DOUBLEPOLAR(LIM(f~
unction*SQRT(DIF(surf,x)^2+DIF(surf,y)^2+1),z,surf),r,r1,r2,03b8,03b81,03b~
82)

""

SURFACERXZPOLAR(function,surf,r,r1,r2,03b8,03b81,03b82):=DOUBLEPOLARXZ(LIM~
(function*SQRT(DIF(surf,z)^2+DIF(surf,x)^2+1),y,surf),r,r1,r2,03b8,03b81,0~
3b82)

""

SURFACERYZPOLAR(function,surf,r,r1,r2,03b8,03b81,03b82):=DOUBLEPOLARYZ(LIM~
(function*SQRT(DIF(surf,y)^2+DIF(surf,z)^2+1),x,surf),r,r1,r2,03b8,03b81,0~
3b82)

""

"__________________________________________________________"

"       Flux in polar coordinates in Rxy ; Rxz ; Ryz       "

""

FLUXRXYPOLAR(p,q,k,surf,r,r1,r2,03b8,03b81,03b82):=DOUBLEPOLAR(LIM(p*(-DIF~
(surf,x))+q*(-DIF(surf,y))+k,z,surf),r,r1,r2,03b8,03b81,03b82)

""

FLUXRXZPOLAR(p,q,k,surf,r,r1,r2,03b8,03b81,03b82):=DOUBLEPOLARXZ(LIM(p*(-D~
IF(surf,x))+q+k*(-DIF(surf,z)),y,surf),r,r1,r2,03b8,03b81,03b82)

""

FLUXRYZPOLAR(p,q,k,surf,r,r1,r2,03b8,03b81,03b82):=DOUBLEPOLARYZ(LIM(p+q*(~
-DIF(surf,y))+k*(-DIF(surf,z)),x,surf),r,r1,r2,03b8,03b81,03b82)

""

"__________________________________________________________"

"    Flux in cartesian coordinates using Gauss' theorem    "

""

FLUXGAUSS(p,q,k,z,z1,z2,y,y1,y2,x,x1,x2):=TRIPLE(DIV([p,q,k]),z,z1,z2,y,y1,y2~
,x,x1,x2)

""

"__________________________________________________________"

"   Flux in cylindrical coordinates using Gauss' theorem   "

""

FLUXGAUSSCYLINDRICAL(p,q,k,z,z1,z2,r,r1,r2,03b8,03b81,03b82):=TRIPLECYLIND~
RICAL(DIV([p,q,k]),z,z1,z2,r,r1,r2,03b8,03b81,03b82)

""

"__________________________________________________________"

"    Flux in spherical coordinates using Gauss' theorem    "

""

FLUXGAUSSSPHERICAL(p,q,k,r,r1,r2,03b8,03b81,03b82,03b1,03b11,03b12):=TR~
IPLESPHERICAL(DIV([p,q,k]),r,r1,r2,03b8,03b81,03b82,03b1,03b11,03b12)

""

